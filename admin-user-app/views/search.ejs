<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <div class="row my-4">
            <div class="table-responsive">
                {{#if customers}}
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-dark">
                            <th>id</th>
                            <th>Name</th>
                            <th>email</th>
                            <th>phone</th>
                            <th>password</th>
                            <th colspan="2">action</th>



                        </tr>

                    </thead>
                    <tbody>
                        {{#each customers as |value key|}}
                        <tr>
                            <td>{{key}}</td>
                            <td>{{ value.name}}</td>
                            <td>{{ value.email }}</td>
                            <td>{{ value.phone}}</td>
                            <td>{{ value.password}}</td>
                            <td>
                                <a href="/route/edit/{{value._id}}"class="text-success">edit</a>
                            </td>
                            <td>
                                <a href="/route/delete/{{value._id}}"class="text-danger">delete</a>
                            </td>

                        </tr>
                        {{/each}}
                    </tbody>


                </table>
                {{else}}
                    <h1 class="text-center text-secondary mt-5">No result found</h1>


                {{/if}}

            </div>

        </div>
    </div>
    
</body>
</html>