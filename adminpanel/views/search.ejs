<%-include('admin-header')-%>
        <div class="row ">
            <div class="table-responsive">
                <% if (customers!=''){ %>
                <table class="table table-striped table-dark text-center">
                    <thead>
                        <tr class="table-dark">
                            <th>id</th>
                            <th>Name</th>
                            <th>email</th>
                            <th>phone</th>
                            <th>password</th>
                            <th colspan="2">action</th>



                        </tr>

                    </thead>
                    <tbody>
                        <% customers.forEach((value,index) =>{ %>
                        <tr>
                            <td><%= index %></td>
                            <td><%= value.name %></td>
                            <td><%= value.email %></td>
                            <td><%= value.phone %></td>
                            <td><%= value.password %></td>
                            <td>
                                <a href="/route/edit/<%= value._id %>"class="text-success">edit</a>
                            </td>
                            <td>
                                <a href="/route/delete/<%= value._id %>"class="text-danger">delete</a>
                            </td>

                        </tr>
                        <% }) %>
                    </tbody>


                </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database</h1>


                <% } %>

            </div>

        </div>
    </div>
<%-include('admin-footer')-%>