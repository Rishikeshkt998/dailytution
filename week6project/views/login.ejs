<%-include('header')-%>
    <div class="text-center center-div pt-5 mt-5" id="login">
        <div class="container w-25 border py-5" id="login" style="background-color:#fff">
            <div class="title" >
                <h2 class="font-weight-bold"><span style="color: rgb(219, 219, 68);">Login</span> <span style="color: rgb(26, 26, 140);">System</span></h2>
                <span>Login For the existing user</span>

            </div>
            <form action="/route/login" method="post"class="pt-5" style="background-color:#fff">
                <div class="form-group">
                    <input type="name" class="form-control" placeholder="name" name="name" required>
                    <small class="form-text text-muted text-left">Login with Username</small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="password" name="password" required>
                </div><br>
                <button type="submit" class="btn btn-success rounded-pill" style="background-color: rgb(45, 107, 241);border-color:rgb(45, 107, 241) ;">Submit</button>
                
               
            </form>
            <a href="/route/signup">Make a new account</a>
            <%if(locals.invalid){%>
                <h5 class="alert alert-danger text-center">
                    <%=invalid%>
                </h5>
            <%}%>
            
                
        
            
            
        </div>

    </div>
    <%-include('footer')-%>
    
